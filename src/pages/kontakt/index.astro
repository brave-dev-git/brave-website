---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

const title = "Kontakt | Brave Security";
const description =
  "Kontakta Brave Security. Maila, ring eller följ oss på LinkedIn. Du når oss direkt.";

const email = "kontakt@bravesecurity.se";
const phoneDisplay = "+46 730 666 891";
const phoneTel = "+46730666891";
const linkedinCompany = "https://www.linkedin.com/company/bravesecurity/";
const linkedinPerson = "https://www.linkedin.com/in/jonasstewen/";
---

<Layout title={title} description={description} lang="sv">
  <Header />

<main class="container">
  <!-- Brödsmula -->
  <nav class="crumbs" aria-label="Brödsmulor">
    <a class="link" href="/#kontakt">← Till startsidan</a>
  </nav>

  <!-- Intro / hero -->
    <section class="section">
      <div class="section-surface">
        <div class="hero-media" aria-hidden="true">
          <img
            src="/hero-kontakt.png"
            alt=""
            width="1600"
            height="900"
            loading="eager"
            decoding="async"
          />
        </div>
        <header class="section-head">
            <h1 class="h1">Kontakt</h1>
            <p class="lead">
                Hör av dig så tar vi ett kort, förutsättningslöst samtal. Beskriv gärna din roll och vad du vill få klarhet i.
            </p>
          </header>

        <div class="cta-row">
          <a class="btn-primary" href={`mailto:${email}?subject=Kontakt%20-%20Brave%20Security`}>Maila oss</a>
          <a class="btn-secondary" href="/tjanster">Se tjänster</a>
        </div>
      </div>
    </section>


  <!-- Kontaktvägar -->
  <section class="section" aria-label="Kontaktvägar">
    <div class="section-surface">
      <header class="section-head">
        <h2 class="h2xl">Kontaktvägar</h2>
        <p class="muted">
          Välj det som passar bäst. Du når oss direkt.
        </p>
      </header>

      <div class="grid3">
        <a class="card link-card" href={`mailto:${email}?subject=Kontakt%20-%20Brave%20Security`}>
          <div class="k">E-post</div>
          <div class="v">{email}</div>
          <div class="hint">Skicka mail →</div>
        </a>

        <a class="card link-card" href={`tel:${phoneTel}`}>
          <div class="k">Telefon</div>
          <div class="v">{phoneDisplay}</div>
          <div class="hint">Ring →</div>
          <div class="note">Vi har inget växelnummer ännu – du når oss direkt.</div>
        </a>

        <div class="card">
          <div class="k">LinkedIn</div>
          <div class="v">
            <a class="link" href={linkedinCompany} target="_blank" rel="noopener noreferrer">Brave Security</a>
            <span class="sep">•</span>
            <a class="link" href={linkedinPerson} target="_blank" rel="noopener noreferrer">Jonas Stewen</a>
          </div>
          <div class="hint">Följ / connecta →</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Förbered samtal -->
  <section class="section">
    <div class="section-surface">
     
      <header class="section-head">
        <h2 class="h2xl">Vill du att vi förbereder ett samtal?</h2>
        <p class="p">
          Skicka ett par rader om nuläge, mål och vad som skaver — så kan vi ta samtalet mer effektivt.
        </p>
      </header>

      <div class="cta-row">
        <a
          class="btn-primary"
          href={`mailto:${email}?subject=Bakgrund%20inf%C3%B6r%20samtal%20-%20Brave%20Security&body=Hej!%0A%0ARoll%3A%20%0A%0AM%C3%A5l%3A%20%0A%0ANul%C3%A4ge%3A%20%0A%0AVad%20som%20skaver%3A%20%0A%0A`}
        >
          Maila med bakgrund
        </a>
        <a class="btn-secondary" href="/tjanster">Se tjänster</a>
      </div>
    </div>
  </section>

  <div class="foot">© {new Date().getFullYear()} Brave Security AB</div>
</main>

</Layout>

<style>
  .hero {
    max-width: 85ch;
    margin-bottom: 1.2rem;
  }

  .h1 {
    font-size: clamp(2rem, 2.2vw + 1rem, 2.7rem);
    margin: 0 0 0.6rem 0;
  }

  .h2 {
    margin: 0 0 0.6rem 0;
    font-size: 1.05rem;
  }

  .p {
    margin: 0;
    color: var(--muted);
    line-height: 1.7;
  }

  .link-card {
    text-decoration: none;
    display: block;
    transition: transform 0.15s ease, border-color 0.15s ease;
  }

  .link-card:hover {
    transform: translateY(-2px);
    border-color: rgba(231, 111, 81, 0.55);
  }

  .k {
    color: rgba(229, 231, 235, 0.85);
    font-size: 0.85rem;
    margin-bottom: 0.35rem;
  }

  .v {
    font-family: var(--font-heading);
    font-weight: 600;
    font-size: 1.05rem;
    margin-bottom: 0.4rem;
  }

  .hint {
    color: var(--muted);
    font-size: 0.9rem;
  }

  .note {
    margin-top: 0.6rem;
    color: rgba(229, 231, 235, 0.75);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .sep {
    opacity: 0.6;
    margin: 0 0.4rem;
  }

  .next {
    margin-top: 1rem;
  }
</style>
