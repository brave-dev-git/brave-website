---
import MegaMenu from "./MegaMenu.astro";
import { servicesMegaMenu } from "../config/megaMenu"

type NavItem =
  | { label: string; page: string }
  | { label: string; section: string };

const nav: NavItem[] = [
  { label: "Utmaningar", page: "/utmaningar" },
  { label: "Insikter", page: "/insikter" },
  { label: "Om oss", page: "/om-oss" },
];

const { variant = "overlay" } = Astro.props;

const pathname = Astro.url?.pathname ?? "/";
const isHome = pathname === "/" || pathname === "";

const hrefFor = (item: NavItem) => {
  if ("page" in item) return item.page;
  return isHome ? `#${item.section}` : `/#${item.section}`;
};
---

<header class={`header ${variant === "overlay" ? "overlay" : ""}`}>
  <div class="header-inner">
    <a class="brand" href="/" aria-label="Brave Security">
      <span class="brand-badge" aria-hidden="true">
        <img
          src="/logo-mark-white.png"
          alt=""
          width="44"
          height="44"
          decoding="async"
        />
      </span>
      <span class="brand-name">Brave Security</span>
    </a>

<nav class="nav" aria-label="Huvudnavigation">
  <!-- Desktop -->
  <div class="nav-desktop">
    <MegaMenu
      label={servicesMegaMenu.label}
      overviewHref={servicesMegaMenu.overviewHref}
      groups={servicesMegaMenu.groups}
    />

    {nav.map((item) => (
      <a class="nav-link" href={hrefFor(item)}>{item.label}</a>
    ))}

    <a class="nav-cta" href="/kontakt">Kontakta oss</a>
  </div>

  <!-- Mobile -->
  <details class="nav-mobile">
    <summary class="nav-mobile__btn" aria-label="Öppna meny">
      ☰ Meny
    </summary>

    <div class="nav-mobile__panel">
      <!-- Tjänster (återanvänd MegaMenu, men vi gör panelen "statisk" på mobil via CSS i MegaMenu.astro) -->
      <MegaMenu
        label={servicesMegaMenu.label}
        overviewHref={servicesMegaMenu.overviewHref}
        groups={servicesMegaMenu.groups}
      />



      {nav.map((item) => (
        <a class="nav-mobile__link" href={hrefFor(item)}>{item.label}</a>
      ))}

      <a class="nav-mobile__cta" href="/kontakt">Kontakta oss</a>
    </div>
  </details>
</nav>

  </div>
</header>


<style>

.header {
  position: sticky;
  top: 0;
  z-index: 50;
  border-bottom: 1px solid var(--border);
  background: rgba(2, 6, 23, 0.65);
  backdrop-filter: blur(10px);
}

/* overlay ska fortfarande vara fixed och fullbredd */
.header.overlay {
  position: fixed;
  left: 0;
  right: 0;
}

/* NY: centrerar innehållet och blir ankare för dropdowns */
.header-inner {
  max-width: 1120px;
  margin: 0 auto;
  padding: 0.9rem 1.2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative; /* VIKTIG: dropdown ska kunna ankra här */
}


  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    text-decoration: none;
  }

  .brand-badge {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: #ffffff;
    border: 1px solid rgba(148, 163, 184, 0.35);
    display: grid;
    place-items: center;
    overflow: hidden;
    box-shadow: 0 10px 26px rgba(2, 6, 23, 0.25);
  }

  .brand-badge img{
    display:block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .brand-name {
    font-family: var(--font-heading);
    font-weight: 700;
    letter-spacing: 0.01em;
    color: var(--text);

    font-size: 1.35rem; /* lägg till */
    line-height: 1;     /* valfritt, gör den tightare */
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 0.95rem;
  }

  .nav-link {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
  }
  .nav-link:hover {
    color: var(--text);
  }

  .nav-cta {
    margin-left: 0.25rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.55rem 0.95rem;
    border-radius: 999px;
    border: 1px solid rgba(229, 231, 235, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text);
    transition: transform 0.15s ease, border-color 0.15s ease, background 0.15s ease;
  }
  .nav-cta:hover {
    border-color: var(--accent);
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.03);
  }

  .nav { display: flex; align-items: center; }
  

/* Desktop default */
.nav-desktop {
  display: flex;
  align-items: center;
  gap: 0.95rem;
}

.nav-mobile { display: none; }
/* Bra grund (om du inte redan har globalt) */
*, *::before, *::after { box-sizing: border-box; }

/* Mobile */
@media (max-width: 820px) {
    /* Gör så panelen kan positioneras mot nav */
  .nav { position: relative; }

  .nav-desktop { display: none; }
  .nav-mobile { 
      display: block;
      position: relative; /* ankare för panelen */ 
    }


  .nav-mobile__btn {
    list-style: none;
    cursor: pointer;
    user-select: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;

    padding: 0.55rem 0.95rem;
    border-radius: 999px;
    border: 1px solid rgba(229, 231, 235, 0.55);
    color: var(--text);
    background: rgba(2, 6, 23, 0.25);
    backdrop-filter: blur(10px);
  }
  .nav-mobile__btn::-webkit-details-marker { display: none; }

  .nav-mobile__panel {
    position: absolute;
    right: 0;
    left: auto; /* så den växer åt vänster */
    top: calc(100% + 0.75rem);
    z-index: 80;

    width: min(92vw, 360px);         /* <-- viktig */
    max-width: calc(100vw - 2.4rem); /* <-- extra säkerhet */
    margin-top: 0;   
    min-width: 0;                /* viktigt: låt den krympa */
    overflow: hidden;           /* inga “läckor” */

    padding: 0.9rem;
    border-radius: 16px;
    border: 1px solid rgba(148, 163, 184, 0.25);
    background: rgba(2, 6, 23, 0.92);
    box-shadow: 0 18px 48px rgba(0, 0, 0, 0.35);
    display: grid;
    gap: 0.5rem;
  }

  .nav-mobile__link {
    text-decoration: none;
    color: var(--text);
    padding: 0.55rem 0.6rem;
    border-radius: 12px;
  }
  .nav-mobile__link:hover {
    background: rgba(255, 255, 255, 0.06);
  }

  .nav-mobile__cta {
    margin-top: 0.35rem;
    display: inline-flex;
    justify-content: center;
    padding: 0.7rem 1.1rem;
    border-radius: 999px;
    border: 1px solid rgba(229, 231, 235, 0.7);
    text-decoration: none;
    font-weight: 600;
  }
}





</style>
