---
type NavItem = { label: string; href: string };

const nav: NavItem[] = [
  { label: "Tjänster", href: "/#tjanster" },
  { label: "Utmaningar", href: "/#utmaningar" },
  { label: "AI & säkerhet", href: "/#ai" },
  { label: "Om oss", href: "/#om-oss" },
  { label: "Kontakt", href: "/#kontakt" },
];

const { variant = "overlay" } = Astro.props;
---

<header class={`header ${variant === "overlay" ? "overlay" : ""}`}>
  <a class="brand" href="/" aria-label="Brave Security">
    <span class="brand-badge" aria-hidden="true">
        <img
        src="/logo-mark-white.png"
        alt=""
        width="28"
        height="28"
        decoding="async"
        />
    </span>
    <span class="brand-name">Brave Security</span>
    </a>


  <nav class="nav" aria-label="Huvudnavigation">
    {nav.map((item) => (
      <a class="nav-link" href={item.href}>{item.label}</a>
    ))}
    <a class="nav-cta" href="/#kontakt">Boka samtal</a>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.9rem 1.2rem;
    border-bottom: 1px solid var(--border);
    background: rgba(2, 6, 23, 0.65);
    backdrop-filter: blur(10px);
  }

  .header.overlay {
    position: fixed;
    left: 0;
    right: 0;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    text-decoration: none;
  }

  .brand-badge {
    width: 32px;
    height: 32px;
    border-radius: 10px;
    background: #ffffff; /* vit bakgrund */
    border: 1px solid rgba(148, 163, 184, 0.35);
    display: grid;
    place-items: center;
    overflow: hidden; /* gör att rundningen klipper bilden snyggt */
  }

  .brand-badge img{
    display:block;
    width: 100%;
    height: 100%;
    object-fit: cover; /* eftersom din bild redan är “vit bakgrund” */
    }

  .brand-mark {
    width: 28px;
    height: 28px;
    border-radius: 8px;
    background: linear-gradient(180deg, rgba(76, 29, 149, 1), rgba(67, 56, 202, 1));
    box-shadow: 0 10px 26px rgba(2, 6, 23, 0.35);
  }

  .brand-name {
    font-family: var(--font-heading);
    font-weight: 700;
    letter-spacing: 0.01em;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 0.9rem;
  }

  .nav-link {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
  }
  .nav-link:hover {
    color: var(--text);
  }

  .nav-cta {
    margin-left: 0.2rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.55rem 0.95rem;
    border-radius: 999px;
    border: 1px solid rgba(229, 231, 235, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
  }
  .nav-cta:hover {
    border-color: var(--accent);
    transform: translateY(-1px);
  }

  @media (max-width: 820px) {
    .nav-link { display: none; }
  }
</style>
