---
import MegaMenu from "./MegaMenu.astro";
import { servicesMegaMenu } from "../config/megaMenu"

type NavItem =
  | { label: string; page: string }
  | { label: string; section: string };

const nav: NavItem[] = [
  { label: "Utmaningar", page: "/utmaningar" },
  { label: "Lösningar", page: "/losningar" },
   { label: "Insikter", page: "/insikter" },
  { label: "Om oss", page: "/om-oss" },
];

const { variant = "overlay" } = Astro.props;

const pathname = Astro.url?.pathname ?? "/";
const isHome = pathname === "/" || pathname === "";

const hrefFor = (item: NavItem) => {
  if ("page" in item) return item.page;
  return isHome ? `#${item.section}` : `/#${item.section}`;
};
---

<header class={`header ${variant === "overlay" ? "overlay" : ""}`}>
  <a class="brand" href="/" aria-label="Brave Security">
    <span class="brand-badge" aria-hidden="true">
      <img
        src="/logo-mark-white.png"
        alt=""
        width="44"
        height="44"
        decoding="async"
      />
    </span>
    <span class="brand-name">Brave Security</span>
  </a>

  <nav class="nav" aria-label="Huvudnavigation">
    <MegaMenu
      label={servicesMegaMenu.label}
      overviewHref={servicesMegaMenu.overviewHref}
      groups={servicesMegaMenu.groups}
    />

    {nav.map((item) => (
      <a class="nav-link" href={hrefFor(item)}>{item.label}</a>
    ))}

    <a class="nav-cta" href="/kontakt">Kontakt oss</a>
  </nav>

</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.9rem 1.2rem;
    border-bottom: 1px solid var(--border);
    background: rgba(2, 6, 23, 0.65);
    backdrop-filter: blur(10px);
  }

  .header.overlay {
    position: fixed;
    left: 0;
    right: 0;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    text-decoration: none;
  }

  .brand-badge {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: #ffffff;
    border: 1px solid rgba(148, 163, 184, 0.35);
    display: grid;
    place-items: center;
    overflow: hidden;
    box-shadow: 0 10px 26px rgba(2, 6, 23, 0.25);
  }

  .brand-badge img{
    display:block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .brand-name {
    font-family: var(--font-heading);
    font-weight: 700;
    letter-spacing: 0.01em;
    color: var(--text);

    font-size: 1.35rem; /* lägg till */
    line-height: 1;     /* valfritt, gör den tightare */
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 0.95rem;
  }

  .nav-link {
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
  }
  .nav-link:hover {
    color: var(--text);
  }

  .nav-cta {
    margin-left: 0.25rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.55rem 0.95rem;
    border-radius: 999px;
    border: 1px solid rgba(229, 231, 235, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text);
    transition: transform 0.15s ease, border-color 0.15s ease, background 0.15s ease;
  }
  .nav-cta:hover {
    border-color: var(--accent);
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.03);
  }

  @media (max-width: 820px) {
    .nav-link { display: none; }
  }
</style>
