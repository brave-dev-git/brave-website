---
import type { MegaGroup } from "../config/megaMenu";

type MegaLink = { label: string; href: string; soon?: boolean };

const {
  label,
  overviewHref,
  groups,
}: {
  label: string;
  overviewHref: string;
  groups: { title: string; description?: string; links: MegaLink[] }[];
} = Astro.props;
---

<details class="mega" data-mega>
  <summary class="nav-link mega__summary">
    {label}
    <span class="mega__chev" aria-hidden="true">▾</span>
  </summary>

  <div class="mega__panel" role="menu" aria-label={label}>
    <div class="mega__header">
      <a class="mega__overview" href={overviewHref}>Översikt →</a>
      <span class="mega__hint">Snabbvägar till upplägg och undersidor</span>
    </div>

    <div class="mega__grid">
      {groups.map((g) => (
        <section class="mega__col" aria-label={g.title}>
          <a class="mega__title-link" href={g.overviewHref}>{g.title}</a>
          {g.description ? <div class="mega__desc">{g.description}</div> : null}

          <ul class="mega__list">
            {g.links.map((l) => (
              <li>
                {l.soon ? (
                  <span class="mega__item mega__item--soon">
                    {l.label} <span class="mega__badge">Kommer</span>
                  </span>
                ) : (
                  <a class="mega__item" href={l.href} role="menuitem">
                    {l.label}
                  </a>
                )}
              </li>
            ))}
          </ul>
        </section>
      ))}
    </div>
  </div>
</details>

<style>
  .mega { position: static; }


  .mega__summary {
    list-style: none;
    cursor: pointer;
    user-select: none;
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    /* matcha headerns .nav-link */
    color: var(--muted);
    text-decoration: none;
    font-size: 0.9rem;
  }
   .mega__summary:hover {
    color: var(--text);
    }
  .mega__summary::-webkit-details-marker { display: none; }
  .mega__chev { font-size: 0.9em; opacity: 0.85; }

    .mega__panel {
      display: none;
      position: absolute;
      top: calc(100% + 0.75rem);

      /* NYTT: ankra till headerns "inner"/container */
      left: 0;
      right: 0;
      margin: 0 auto;

      /* samma bredd som innehållet */
      width: min(1120px, calc(100vw - 2.4rem));

      padding: 1rem;
      border-radius: 20px;
      border: 1px solid rgba(148, 163, 184, 0.25);
      background: rgba(2, 6, 23, 0.92);
      backdrop-filter: blur(10px);
      box-shadow: 0 18px 48px rgba(0, 0, 0, 0.35);
      z-index: 70;
}
 /* Viktigt: låt den styras av details[open] så den fungerar på mobil utan hover */
  details[open] > .mega__panel { display: block; }

  /* Desktop: hover öppnar */
  @media (hover: hover) and (pointer: fine) {
    .mega:hover > .mega__panel,
    .mega:focus-within > .mega__panel {
      display: block;
    }
  }

  .mega__header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.25rem 0.25rem 0.9rem;
    border-bottom: 1px solid rgba(148, 163, 184, 0.18);
    margin-bottom: 0.9rem;
  }

  .mega__overview {
    text-decoration: none;
    font-weight: 700;
    color: var(--text);
  }
  .mega__overview:hover { text-decoration: underline; }

  .mega__hint {
    color: rgba(229, 231, 235, 0.75);
    font-size: 0.85rem;
  }

  .mega__grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem;
  }

  .mega__col { padding: 0.25rem; }

  .mega__title {
    font-weight: 800;
    letter-spacing: 0.01em;
  }

  .mega__desc {
    margin-top: 0.35rem;
    color: rgba(229, 231, 235, 0.75);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .mega__list {
    margin: 0.8rem 0 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.35rem;
  }

  .mega__item {
    display: block;
    padding: 0.55rem 0.6rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 650;
    color: var(--text);
  }

  .mega__item:hover,
  .mega__item:focus-visible {
    outline: none;
    background: rgba(255, 255, 255, 0.06);
  }

  .mega__item--soon {
    opacity: 0.75;
    border: 1px dashed rgba(148, 163, 184, 0.35);
    background: rgba(2, 6, 23, 0.25);
  }

  .mega__badge {
    margin-left: 0.5rem;
    font-size: 0.72rem;
    padding: 0.1rem 0.45rem;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.25);
    color: rgba(229, 231, 235, 0.85);
  }
  

  /* Desktop: hover öppnar */
  @media (hover: hover) and (pointer: fine) {
    .mega:hover > .mega__panel,
    .mega:focus-within > .mega__panel {
      display: block;
    }
  }

  details[open] > .mega__panel { display: block; }

  /* Responsive -- Behövs denna? */
  @media (max-width: 980px) {
    .mega__grid { grid-template-columns: 1fr; }
    .mega__panel { width: min(720px, calc(100vw - 2.4rem)); }
  }

/* ===== Mobile: gör megamenyn till inline accordion ===== */
@media (max-width: 820px) {
  .mega {
    width: 100%;
    position: static;
  }

  .mega__hint { display: none; }      /* tar bort “Snabbvägar…” */
  .mega__overview { display: none; }  /* valfritt */
  .mega__item { font-weight: 600; }   /* lugnare typografi */
  .mega__desc { display: none; }      /* valfritt: döljer beskrivningar per grupp */


  /* summary ska se ut som dina andra länkar i mobilpanelen */
    .mega__summary {
      width: 100%;
      justify-content: space-between;
      padding: 0.55rem 0.6rem;
      border-radius: 12px;
      color: var(--text);
      background: rgba(255, 255, 255, 0.04);
    }

   /* INGEN overlay-panel på mobil */
  .mega__panel {
    position: static;
    left: auto;
    top: auto;
    transform: none;
    width: 100%;
    margin: 0.5rem 0 0;
    padding: 0.6rem 0 0;
    border: 0;
    border-radius: 0;
    background: transparent;
    box-shadow: none;
    backdrop-filter: none;
  }

/* förenkla header */
  .mega__header {
    border-bottom: 0;
    margin-bottom: 0.5rem;
    padding: 0 0.25rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.35rem;
  }

  .mega__grid {
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  .mega__col { padding: 0; }

  .mega__item {
    padding: 0.55rem 0.6rem;
    border-radius: 12px;
  }

  .mega__hint { white-space: normal; }
  
  /* På mobil vill vi INTE hover-auto-open */
  @media (hover: hover) and (pointer: fine) {
    .mega:hover > .mega__panel,
    .mega:focus-within > .mega__panel {
      display: none;
    }
  }
}




</style>

